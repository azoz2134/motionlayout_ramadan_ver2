<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/linearLayout"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/animate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ramadan_try"/>
        <Constraint
            android:id="@+id/text_ramadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ramadan karem"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animate_1"/>
        <Constraint
            android:id="@+id/text_ramadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ramadan karem"
            android:textSize="36sp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animate_1"/>
        <Constraint
            android:id="@+id/sunup"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="190dp"
            android:alpha="0"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/sun_first"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="16dp"
            android:alpha="0"
            android:background="@drawable/conrner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sunup"/>

        <Constraint
            android:id="@+id/sun_second"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="16dp"
            android:alpha="0"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sun_first"/>
        <Constraint
            android:id="@+id/sundown"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="16dp"
            android:alpha="0"
            android:background="@drawable/conrner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sun_second"/>
        <Constraint
            android:id="@+id/night"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="16dp"
            android:alpha="0"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sundown"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/linearLayout"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/animate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            android:alpha="0"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ramadan_try"/>
        <Constraint
            android:id="@+id/text_ramadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ramadan karem"
            android:textSize="36sp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animate_1"/>
        <Constraint
            android:id="@+id/sunup"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="190dp"
            android:alpha="1"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/sun_first"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:background="@drawable/conrner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sunup"/>
        <Constraint
            android:id="@+id/sun_second"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sun_first"/>
        <Constraint
            android:id="@+id/sundown"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:background="@drawable/conrner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sun_second"/>
        <Constraint
            android:id="@+id/night"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:alpha="1"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sundown"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/after">
        <Constraint
            android:id="@+id/linearLayout"
            android:layout_width="361dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/conrner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/animate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            android:alpha="0"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ramadan_try"/>
        <Constraint
            android:id="@+id/text_ramadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ramadan karem"
            android:textSize="36sp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animate_1"/>


    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:touchAnchorId="@+id/text_ramadan"
            app:dragDirection="dragUp" />
    </Transition>
</MotionScene>
